	public static void t6(String[] args) {

		int[] unit = { 50000, 10000, 1000, 500, 100, 50, 10, 1 };

		int input;
		System.out.print("금액을 입력하시오>>");
		input = sc.nextInt();

		while (input > 0) {

			for (int i = 0; i < unit.length; i++) {
				if (input / unit[i] != 0) {
					System.out.println(unit[i] + "원짜리 :" + input / unit[i] + "개");
					input -= (input / unit[i]) * (unit[i]);
				}

			}
		}

	}

